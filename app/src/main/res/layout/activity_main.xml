<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:id="@+id/scrollView"
        >
    <TextView
        android:id="@+id/txt_ekran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:text="0"
        android:textSize="50sp"
        android:layout_marginRight="10dp"/>
    </ScrollView>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:columnCount="4">


        <Button
            android:id="@+id/btn_ac"
            android:textColor="#ffff"
            android:layout_margin="1dp"
            android:background="#747277"
            android:text="AC"
            android:textSize="20sp"
            style="@style/button_style" />
        <Button
            android:layout_columnWeight="1"
            android:layout_columnSpan="2"
            android:id="@+id/btn_delete"
            style="@style/button_style"
            android:textColor="#ffff"
            android:layout_margin="1dp"
            android:background="#747277"
            android:text="← o'chirish"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/btn_bolish"
            style="@style/button_style"
            android:textColor="#ffff"
            android:layout_margin="1dp"
            android:background="#FE9F0A"
            android:text="÷"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/btn_7"
            style="@style/button_style"
            android:textColor="#ffff"
            android:layout_margin="1dp"
            android:background="#88868A"
            android:text="7"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/btn_8"
            style="@style/button_style"
            android:textColor="#ffff"
            android:layout_margin="1dp"
            android:background="#88868A"
            android:text="8"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/btn_9"
            style="@style/button_style"
            android:textColor="#ffff"
            android:layout_margin="1dp"
            android:background="#88868A"
            android:text="9"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/btn_kopaytirish"
            style="@style/button_style"
            android:textColor="#ffff"
            android:layout_margin="1dp"
            android:background="#FE9F0A"
            android:text="x"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/btn_4"
            style="@style/button_style"
            android:textColor="#ffff"
            android:layout_margin="1dp"
            android:background="#88868A"
            android:text="4"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/btn_5"
            style="@style/button_style"
            android:textColor="#ffff"
            android:layout_margin="1dp"
            android:background="#88868A"
            android:text="5"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/btn_6"
            style="@style/button_style"
            android:textColor="#ffff"
            android:layout_margin="1dp"
            android:background="#88868A"
            android:text="6"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/btn_ayirish"
            style="@style/button_style"
            android:textColor="#ffff"
            android:layout_margin="1dp"
            android:background="#FE9F0A"
            android:text="-"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/btn_1"
            style="@style/button_style"
            android:textColor="#ffff"
            android:layout_margin="1dp"
            android:background="#88868A"
            android:text="1"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/btn_2"
            style="@style/button_style"
            android:textColor="#ffff"
            android:layout_margin="1dp"
            android:background="#88868A"
            android:text="2"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/btn_3"
            style="@style/button_style"
            android:textColor="#ffff"
            android:layout_margin="1dp"
            android:background="#88868A"
            android:text="3"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/btn_qoshish"
            style="@style/button_style"
            android:textColor="#ffff"
            android:layout_margin="1dp"
            android:background="#FE9F0A"
            android:text="+"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/btn_0"
            style="@style/button_style"
            android:textColor="#ffff"
            android:layout_margin="1dp"
            android:background="#88868A"
            android:layout_columnWeight="1"
            android:layout_columnSpan="2"
            android:text="0"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/btn_nuqata"
            style="@style/button_style"
            android:textColor="#ffff"
            android:layout_margin="1dp"
            android:background="#88868A"
            android:text="."
            android:textSize="20sp"/>
        <Button
            android:id="@+id/btn_teng"
            style="@style/button_style"
            android:textColor="#ffff"
            android:layout_margin="1dp"
            android:background="#00C853"
            android:text="="
            android:textSize="20sp"/>

    </GridLayout>

</LinearLayout>